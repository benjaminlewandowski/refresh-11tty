---
layout: default
meta_title: Categories
meta_description: Categories page description
body_class: categories
title: Categories
pagination:
  data: collections
  size: 1
  alias: category
permalink: /category/{{ category }}/
---

<main id="main" tabindex="-1">

    <article>

        <header>
            <h1>Category â€” {{ category | capitalize }}</h1>
        </header>

        <div class="posts">

            {% for post in collections[category] %}

                <article>

                    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>

                    <time datetime="{{ post.date }}">
                        {{ post.date | dateDisplay }}
                    </time>

                </article>

            {% endfor %}
        </div>

    </article>

</main>

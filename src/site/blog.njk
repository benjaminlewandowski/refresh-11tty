---
layout: default
meta_title: Blog
meta_description: Blog page description
body_class: blog
title: The Blog
eleventyNavigation:
    title: Blog
    key: blog
    order: 3
---

<main id="main" tabindex="-1">

    <section aria-label="Blogs">

        <h1>{{ title }}</h1>

        <div class="posts">

            {% for post in collections.blog %}

                <article class="post">

                    {# featured post image & category #}
                    {% if post.data.featured_image %}

                        <a class="featured-image-link" href="{{ post.url }}">

                            {# category link #}
                            <ul>

                                {% for item in post.data.tags %}

                                    {%- if item != "blog" -%}

                                        <li>

                                            <span>{{ item | capitalize }}</span>

                                        </li>

                                    {%- endif -%}

                                {% endfor %}

                            </ul>

                            <figure>

                                <img src="{{ post.data.featured_image }}" class="block" alt="{{ post.data.image_caption }}">

                            </figure>

                        </a>

                    {% endif %}

                    <div>

                        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>

                        <div>

                            <p class="author">By {% if page.author.name %}{% else %}{{ site.author.name }}{% endif %}</p>

                            <p class="hidden">â€”</p>

                            <time datetime="{{ post.date }}">
                                {{ post.date | dateDisplay }}
                            </time>

                        </div>

                    </div>

                </article>

            {% endfor %}

        </div>

    </section>

</main>

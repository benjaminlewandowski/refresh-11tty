---
layout: default
meta_title: Blog
meta_description: Blog page description
body_class: blog
title: The Blog
eleventyNavigation:
    title: Blog
    key: blog
    order: 3
---

<main id="main" tabindex="-1">

    <section aria-label="Blogs" class="panel">

        <h1>{{ title }}</h1>

        <div class="posts grid">

            {% for post in collections.blog %}

                <article class="post col-12 col-6-medium col-4-large col-3-extralarge card">

                    {# featured post image & category #}
                    {% if post.data.featured_image %}
                        <header class="card-header">
                            <a class="featured-image-link " href="{{ post.url }}">
                                <figure class="ar-wrapper is-16x9">

                                    <img class="ar" src="{{ post.data.featured_image }}" alt="{{ post.data.image_caption }}">

                                </figure>
                            </a>
                        </header>
                    {% endif %}

                    <div class="card-content">

                        <h2>
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </h2>

                    </div>

                    <footer class="card-footer">

                        <p class="author">By {% if page.author.name %}
                            {% else %}{{ site.author.name }}
                            {% endif %}
                        </p>

                        <p class="hidden">â€”</p>

                        <time datetime="{{ post.date }}">
                            {{ post.date | dateDisplay }}
                        </time>

                        {# category link #}
                        <ul class="tags">

                            {% for item in post.data.tags %}

                                {%- if item != "blog" -%}

                                    <li class="tag">

                                        <span>{{ item | capitalize }}</span>

                                    </li>

                                {%- endif -%}

                            {% endfor %}

                        </ul>
                    </footer>

                </article>

            {% endfor %}

        </div>

    </section>

</main>

<nav class="navigation socialnavigation">
    <ul class="socialnavigation__menu">

        {% for icon, link in site.social_links %}

        <li class="socialnavigation__item">

            <a href="{{ link | safe }}" class="socialnavigation__link" target="_blank" rel="noopener noreferrer">

                <span class="sr-only">Find me on {{ icon }}</span>

                <svg class="icon socialnavigation__icon" role="img" aria-hidden="true" width="18" height="18">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#icon-{{ icon }}"></use>
                </svg>

            </a>

        </li>

        {% endfor %}

    </ul>
</nav>

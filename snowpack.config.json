{
    "mount": {
        "build": "/",
        "src/resources/typescript": "/"
    },
    "plugins": [
        ["@snowpack/plugin-optimize"],
        ["@snowpack/plugin-postcss"],
        ["@snowpack/plugin-typescript"],
        [
            "@snowpack/plugin-run-script",
            {
                "cmd": "tsc ./src/resources/typescript/index.ts --outdir dist/js/",
                "watch": "tsc ./src/resources/typescript/index.ts --outdir build/js/ --watch"
            }
        ],
        [
            "@snowpack/plugin-run-script",
            {
                "cmd": "postcss src/resources/sass/*.scss --dir dist/css --ext css",
                "watch": "postcss src/resources/sass/*.scss --dir build/css --ext css --quiet --watch"
            }
        ],
        [
            "@snowpack/plugin-run-script",
            {
                "cmd": "eleventy --quiet",
                "watch": "eleventy --quiet --watch"
            }
        ]
    ],
    "devOptions": {
        "out": "dist",
        "hmrDelay": 300
    }
}

{
    "name": "refresh",
    "version": "1.0.0",
    "license": "MIT",
    "dev": "build/js/index.js",
    "build": "dist/js/index.js",
    "scripts": {
        "clean": "run-s clean:*",
        "clean:dev": "rimraf build src/resources/css",
        "clean:dist": "rimraf dist",
        "build": "run-s build:*",
        "build:eleventy": "eleventy --config=src/resources/config/dev/eleventy.config.js",
        "build:rollup": "rollup --config src/resources/config/dev/rollup.config.js",
        "build:sass": "sass src/resources/sass:src/resources/css",
        "build:postcss": "postcss --config src/resources/config/dev/ src/resources/css/*.css --verbose -d build/css -m",
        "dev": "run-p dev:*",
        "dev:eleventy": "eleventy --config=src/resources/config/dev/eleventy.config.js --watch",
        "dev:rollup": "rollup --config src/resources/config/dev/rollup.config.js --watch",
        "dev:sass": "sass src/resources/sass/:src/resources/css --watch --poll",
        "dev:postcss": "postcss --config src/resources/config/dev/ src/resources/css/*.css --verbose -d build/css -m -w --poll",
        "dev:server": "browser-sync build --watch",
        "dist": "run-s dist:*",
        "dist:eleventy": "eleventy --config=src/resources/config/dist/eleventy.config.js",
        "dist:rollup": "rollup --config src/resources/config/dist/rollup.config.js",
        "dist:terser": "terser --compress --mangle --output dist/js/index.js -- dist/js/index.js",
        "dist:scss": "postcss --config src/resources/config/dist/ src/resources/sass/*.scss --dir dist/css --ext css --quiet",
        "start:dev": "run-s clean:dev build dev",
        "start:dist": "run-s clean:dist dist"
    },
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@11ty/eleventy-navigation": "^0.1.6",
        "@11ty/eleventy-plugin-rss": "^1.0.9",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
        "@csstools/postcss-sass": "^4.0.0",
        "@fullhuman/postcss-purgecss": "^3.0.0",
        "autoprefixer": "^10.1.0",
        "browser-sync": "^2.26.13",
        "cssnano": "^4.1.10",
        "eleventy-plugin-blog-tools": "^0.3.1",
        "eleventy-plugin-lazyimages": "^2.1.0",
        "eleventy-plugin-seo": "^0.5.1",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "html-minifier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "nunjucks": "^3.2.2",
        "postcss": "^8.2.1",
        "postcss-cli": "^8.3.1",
        "postcss-combine-media-query": "^1.0.1",
        "postcss-preset-env": "^6.7.0",
        "postcss-scss": "^3.0.4",
        "postcss-short": "^5.0.0",
        "postcss-sorting": "^6.0.0",
        "postcss-utilities": "^0.8.4",
        "postcss-watch-folder": "^1.0.0",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.34.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript": "^1.0.1",
        "sass": "^1.30.0",
        "serve": "^11.3.2",
        "stylelint": "^13.8.0",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-order": "^4.1.0",
        "stylelint-prettier": "^1.1.2",
        "stylelint-scss": "^3.18.0",
        "terser": "^5.5.1",
        "tslint": "^6.1.3",
        "typescript": "^4.1.3",
        "wait-on": "^5.2.0",
        "watch": "^1.0.2"
    }
}
